---
pagination:
  data: collections
  size: 1
  alias: tag
layout: tag.liquid
permalink: /tag/{{ tag }}/
eleventyComputed:
  title: 'Tagged “{{ tag }}”'
---
{% assign taglist = collections[ tag ] %}
{% for entry in taglist reversed %}
	<a class='little background box' href='{{ entry.url }}' hreflang='{{ entry.data.lang }}' title='{{ entry.data.title }}'>
		<h2>{{ entry.data.title }}</h2>
		{% if entry.data.description %}
			<p>{{ entry.data.description | markdownify | strip_html | truncatewords: 30 }}</p>
		{% endif %}
	</a>
{% endfor %}
