<div class='tool'>
	<a id='scrollButton' href='#' aria-label='scroll to top' title='scroll to top'>
		<svg class='button' width='32' height='32' version='1.1' viewBox='0 0 32 32' xmlns='http://www.w3.org/2000/svg'>
			<path d='m10 27v-11c-10 0-10-5-5-10 4.2-4.2 8.5-6 11-6 2.5-0.046 6.8 1.8 11 6 5 5 5 10-5 10v11c0 6.7-12 6.7-12 0z'/>
		</svg>
	</a>
	{% if alternate != null %}
<a class='button' rel='alternate' href='{{ alternate.url }}' hreflang='{{ alternate.data.lang }}' title='{% if alternate.data.lang == 'it' %}Visualizza questa pagina in italiano'>🇮🇹{% elsif alternate.data.lang == 'en' %}View this page in English'>🇬🇧{% else %}View this page in {{ alternate.data.lang }}'>{{ alternate.data.lang }}{% endif %}</a>
	{% endif %}
	<a class='button' href='/search' title='search'>🔎</a>
	<label id='nav-toggle-button' for='menutoggle' aria-label='toggle-menu' class='button'>🍔</label>
</div>
