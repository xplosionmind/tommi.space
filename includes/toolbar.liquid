<div class='tool'>
	<a id='scrollButton' onclick='nowScroll()' href='#' aria-label='scroll to top' title='scroll to top'>
		<div class='button'>⬆</div>
	</a>
	{% if alternate != null %}
		<label for='langtoggle' title='language selector' class='button'>🌍</label>
		<input type='checkbox' id='langtoggle'>
		<div class='lang-list'>
			<a rel='alternate' href='{{ alternate.url }}' hreflang='{{ alternate.data.lang }}' title='{{ alternate.data.title }}'>{% if alternate.data.lang == 'it' %}🇮🇹{% elsif alternate.data.lang == 'en' %}🇬🇧{% else %}{{ alternate.data.lang }}{% endif %}</a>
		</div>
	{% endif %}
	<a class='button' href='/search' title='search'>🔎</a>
	<label id='nav-toggle-button' for='menutoggle' aria-label='toggle-menu' class='button'>🍔</label>
</div>
