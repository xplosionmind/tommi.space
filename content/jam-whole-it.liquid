title: Tutta La Marmellata
description: Tutti gli ingredienti de <cite>La Marmellata</cite>
layout: page.html
type: CollectionPage
permalink: /marmellata/tutta/
lang: it
image: /jam.webp
sitemap:
  priority: 0.5
  changefreq: weekly
---
<div class='row'>
	<div class='one-third column'>
		{% render 'lang-filter.html', lang: lang %}
	</div>
	<div class='two-thirds column'>
		{% render 'tags.html', site: site %}
	</div>
</div>
<div class='grid'>
	{% for note in collections.jam %}
		<a href='{{ note.url }}' lang='{{ note.data.lang }}' hreflang='{{ note.data.lang }}' title='{{ note.data.title }}'>
			<div class='vertical flex box'>
				<h4>{{ note.data.title }}</h4>
				{% if note.data.description %}
					<p>{{ note.data.description | markdownify | strip_html | truncatewords: 30 }}</p>
				{% comment %}#upstream #bug{% else %}
					<p>{{ note.content | strip_html | truncatewords: 30 }}</p>{% endcomment %}
				{% endif %}
				{% render 'entry-tags.liquid', tags: note.data.tags, site: site, size: 'tiny' %}
			</div>
		</a>
	{% endfor %}
</div>
