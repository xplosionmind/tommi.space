---
title: All the tags
lang: en
layout: page.html
description: List of this websiteâ€™s content, sorted by topic, if associated to one.
eleventyExcludeFromCollections: true
---
{% for tag in site.tags %}{% unless tag.url %}
	<div class='row'>
		<section id='{{ tag.title | slugify }}'>
			<h2>{{ tag.title }}</h2>
			<p>{{ tag.description | markdownify }}</p>
			<ul class='three'>
				{% for entry in collections.all %}
					{% for thistag in entry.data.tags %}
						{% if thistag contains tag.title %}
							<li><a href='{{ entry.url }}' lang='{{ entry.data.lang }}' title='{{ entry.data.title }}'>{{ entry.data.title }}</a></li>
						{% endif %}
					{% endfor %}
				{% endfor %}
			</ul>
		</section>
	</div>
{% endunless %}{% endfor %}
